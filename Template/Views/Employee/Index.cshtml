<link href="~/Content/style.css" rel="stylesheet" />
<style>

    [pagging="main"] a {
        cursor: pointer;
        text-decoration: underline;
        margin: .5em;
    }

    .table {
        width: auto;
    }

    /*.current {
        color: #3498db;
    }*/

    /*[class*='-sortable'] {
        cursor: grab;
    }*/

    /*tr {
        display: flex;
    }*/

    th span {
        cursor: pointer;
    }

        th span.resize {
            border-right: 2px solid #000;
            float: right;
            height: 16px;
            cursor: grab;   
        }

    form#test {
        position: relative;
        top: 6rem;
        left: 12em;
        width: 80rem;
    }

    .table {
    }

    thead, tbody {
        display: block;
        width: 110.5rem;
    }

    tbody {
        overflow-y: scroll;
        overflow-x: hidden;
        height: 280px;
    }

    td, th {
        text-overflow: ellipsis;
        overflow: hidden;
    }

    .filter-wrapper {
        position: absolute;
        background: #FFF;
        display: none;
        padding: 10px 15px;
        width: 250px;
        border: 1px solid #c5c5c59e;
        -webkit-box-shadow: 0px 0px 10px 0px rgba(120,120,120,0.8);
        -moz-box-shadow: 0px 0px 10px 0px rgba(120,120,120,0.8);
        box-shadow: 0px 0px 10px 0px rgba(120,120,120,0.8);
    }

    .filter-button {
        padding: 5px;
        text-align: center;
        border-bottom: 2px solid #2196f3;
        margin-bottom: 3px;
        cursor: pointer;
    }

    .pagination {
        display: inline-block;
        padding-left: 45rem;
        margin: 20px 0;
        border-radius: 4px;
        padding-top: 6rem;
    }



        .pagination button {
            color: black;
            float: left;
            padding: 8px 16px;
            border: none;
        }

        .pagination button.current {
            background-color: royalblue;
            color: white;
            border-radius: 5px;
        }

        .filter-button i {
            color: #2196f3;
        }

    .filter-option, .filter-input {
        width: 100%;
        padding: 5px 0;
    }

    .filter-option {
    }

        .filter-option select, .filter-input input {
            width: 100%;
            height: 25px;
        }

    .filter-input {
    }

    .pull-left {
        float: left;
    }

    .pull-right {
        float: right;
    }
</style>

<form id='test'>
    <table table-engine="main" class="table table-bordered table-hover" border="1" data="" id="sortable"></table>
</form>
<div table-engine-pagging="main" class="pagination"></div>

<div table-engine-pagesize="main"></div>

<div table-engine-column-switch="main"></div>
<button onclick="test.GetPaging(1, 5, 1);">Reset</button>

